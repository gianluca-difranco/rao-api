openapi: 3.0.1
info:
  title: R.A.O. API
  description: Chiamate API relative all'accesso e alla creazione del token.
  version: 1.0.0
servers:
- url: https://milano.rao.spid.app/
tags:
- name: Authentication
  description: Api relative all'accesso di un operatore
  externalDocs:
    description: git R.A.O. pubblico
    url: https://github.com/Sielte/rao-pubblico
- name: Sigillo
  description: Generazione di una richiesta di identificazione
  externalDocs:
    description: git R.A.O. pubblico
    url: https://github.com/Sielte/rao-pubblico
paths:
  /auth:
    post:
      tags:
      - Authentication
      summary: Ottieni un token di sessione inserendo username, password e codice IPA.
      operationId: auth
      requestBody:
        description:
          La funzione prende in input il Codice IPA del R.A.O. di appartenenza dell'utente, codice fiscale e l'hash SHA256 della password dell'operatore che sta effettuando l'accesso. <br>
          Output CASO OK - Token di autenticazione. <br>
          Output CASO KO - messaggio relativo all'errore riscontrato.
        content:
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/Auth'
        required: true
      responses:
        200:
          description: Operazione eseguita con successo
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiAuthResponse200'
        403:
          description: l'utente è disabilitato. Non può accedere
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiAuthResponse403'
        404:
          description: Username o Password errati
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiAuthResponse404'
        405:
          description: Formato dei parametri non corretto
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiAuthResponse405'
      x-codegen-request-body-name: payload
  /token:
    post:
      tags:
      - Sigillo
      summary: Creazione della richiesta di identificazione
      operationId: token
      parameters:
      - name: Authentication
        in: header
        description: Token di autenticazione - token da inserire nell'header per validare la richiesta di identificazione. 
        required: true
        schema:
          type: string
          example: eyJ1c2VybmFtZSI6IkNpYW8ifQ:1lWcPE:a-vukHyF6j_sAxiHWSJ78wjeEqw
      requestBody:
        description: 
          La funzione prende in input i dati relativi al cittadino che richiede l'identificazione (tra i quali dati anagrafici, domicilio, documento di riconoscimento) e una stringa che corrisponde all'HMAC dei dati di cui sopra più il PIN dell'operatore. <br> 
          Output CASO OK - PDF stream contenente la prima parte del codice di attivazione (passphrase). <br>
          Output CASO KO - messaggio relativo all'errore riscontrato.
        content:
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/UserDetail'
        required: true
      responses:
        200:
          description: Operazione eseguita con successo
          content:
            application/pdf:
              schema:
                $ref: '#/components/schemas/ApiTokenResponse200'
        403:
          description: Accesso negato
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiAuthResponse403'
        405:
          description: Richiesta non valida
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ApiTokenResponse405'
      x-codegen-request-body-name: payload
components:
  schemas:
    Auth:
      required:
      - password
      - username
      - ipaCode
      type: object
      properties:
        ipaCode:
          type: string
          example: C_C351
        username:
          type: string
          example: RSSMRA80A01C351O
        password:
          type: string
          example: LaMiaPass123!
    UserDetail:
      required:
      - hmac_parameters
      - fiscalNumber
      - name
      - familyName
      - placeOfBirth
      - countyOfBirth
      - nationOfBirth
      - dateOfBirth
      - gender
      - email
      - identificationSerialCode
      - identificationExpirationDate
      - idCardType
      - idCardDocNumber
      - idCardIssuer
      - idCardIssueDate
      - idCardExpirationDate
      - countryCallingCode
      - phoneNumber
      - addressType
      - addressName
      - addressNumber
      - postalCode
      - municipality
      - county
      - nation
      type: object
      properties:
        name:
          type: string
          example: Giovanni Mario
        familyName:
          type: string
          example: Rossi
        placeOfBirth:
          type: string
          example: C351
        countyOfBirth:
          type: string
          example: CT
        nationOfBirth:
          type: string
          example: Z000
        dateOfBirth:
          type: string
          example: 2000-09-24
        gender:
          type: string
          example: M
        fiscalNumber:
          type: string
          example: RSSGNN00P24F205L
        email:
          type: string
          example: mariorossi@mail.com
        pec:
          type: string
          example: me@meypecprovider.com
        identificationSerialCode:
          type: string
          example: "123456789"
        identificationExpirationDate:
          type: string
          example: 2025-09-24
        idCardType:
          type: string
          example: CartaIdentita
        idCardDocNumber:
          type: string
          example: AS09452389
        idCardIssuer:
          type: string
          example: Catania
        idCardIssueDate:
          type: string
          example: 2013-01-02
        idCardExpirationDate:
          type: string
          example: 2023-09-24
        countryCallingCode:
          type: string
          example: +39
        phoneNumber:
          type: string
          example: "3471234567"
        addressType:
          type: string
          example: Via
        addressName:
          type: string
          example: Augusto
        addressNumber:
          type: string
          example: 1/A
        postalCode:
          type: string
          example: "00129"
        municipality:
          type: string
          example: H501
        county:
          type: string
          example: RM
        nation:
          type: string
          example: Z000
        hmac_parameters:
          type: string
        
    ApiAuthResponse200:
      required:
      - statusCode
      - message
      type: object
      properties:
        statusCode:
          type: integer
          example: 200
        message:
          type: string
          example: eyJ1c2VybmFtZSI6IkNpYW8ifQ:1lWcPE:a-vukHyF6j_sAxiHWSJ78wjeEqw
    ApiTokenResponse200:
      required:
      - statusCode
      - message
      type: object
      properties:
        statusCode:
          type: integer
          example: 200
        message:
          type: string
          example: "xref 
                    5 6
                    0000000618 00000 n
                    0000000658 00000 n
                    0000000701 00000 n
                    0000000798 00000 n
                    0000045112 00000 n
                    0000045219 00000 n..."
    ApiAuthResponse405:
      required:
      - statusCode
      - message
      type: object
      properties:
        statusCode:
          type: integer
          example: 405
        message:
          type: string
          example: Il formato del campo username non è corretto
    ApiTokenResponse405:
      required:
      - statusCode
      - message
      type: object
      properties:
        statusCode:
          type: integer
          example: 405
        message:
          type: string
          example: Il PIN dell'operatore deve essere composto esattamente da 6 cifre.
    ApiAuthResponse403:
      required:
      - statusCode
      - message
      type: object
      properties:
        statusCode:
          type: integer
          example: 403
        message:
          type: string
          example: Credenziali bloccate. Contatta il Security Officer.
    ApiAuthResponse404:
      required:
      - statusCode
      - message
      type: object
      properties:
        statusCode:
          type: integer
          example: 404
        message:
          type: string
          example: Non trovato
